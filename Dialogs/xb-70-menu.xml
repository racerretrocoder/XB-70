<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <default>
    <menu n="10">
      <label>XB-70</label>
      <enabled type="bool">true</enabled>
      <item>
        <label>AutoStart/AutoStop</label>
        <binding>
          <command>property-toggle</command>
          <property>controls/electric/battery-switch</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/electric/engine/generator</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/instrument-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/nav-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/beacon</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/strobe</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/switches/starterkey-insert</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/engines/engine[0]/fuel-pump</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/engines/engine[1]/fuel-pump</property>
        </binding>
        <!-- Magnetos ON -->
        <binding>
          <condition>
            <property>controls/switches/starterkey-insert</property>
          </condition>
          <command>property-assign</command>
          <property>controls/engines/engine[0]/magnetos</property>
          <value>3</value>
        </binding>
        <binding>
          <condition>
            <property>controls/switches/starterkey-insert</property>
          </condition>
          <command>property-assign</command>
          <property>controls/engines/engine[1]/magnetos</property>
          <value>3</value>
        </binding>
        <binding>
          <condition>
            <property>controls/switches/starterkey-insert</property>
          </condition>
          <command>property-assign</command>
          <property>consumables/fuel/tank[0]/selected</property>
          <value>true</value>
        </binding>
        <binding>
          <condition>
            <property>controls/switches/starterkey-insert</property>
          </condition>
          <command>property-assign</command>
          <property>consumables/fuel/tank[1]/selected</property>
          <value>true</value>
        </binding>
        <binding>
          <condition>
            <property>controls/switches/starterkey-insert</property>
          </condition>
          <command>property-assign</command>
          <property>consumables/fuel/tank[2]/selected</property>
          <value>true</value>
        </binding>
        <binding>
          <condition>
            <property>controls/switches/starterkey-insert</property>
          </condition>
          <command>property-assign</command>
          <property>consumables/fuel/tank[3]/selected</property>
          <value>true</value>
        </binding>
        <!-- Magnetos OFF -->
        <binding>
          <condition>
            <not><property>controls/switches/starterkey-insert</property></not>
          </condition>
          <command>property-assign</command>
          <property>controls/engines/engine[0]/magnetos</property>
          <value>0</value>
        </binding>
        <binding>
          <condition>
            <not><property>controls/switches/starterkey-insert</property></not>
          </condition>
          <command>property-assign</command>
          <property>controls/engines/engine[1]/magnetos</property>
          <value>0</value>
        </binding>
        <binding>
          <condition>
            <not><property>controls/switches/starterkey-insert</property></not>
          </condition>
          <command>property-assign</command>
          <property>consumables/fuel/tank[0]/selected</property>
          <value>false</value>
        </binding>
        <binding>
          <condition>
            <not><property>controls/switches/starterkey-insert</property></not>
          </condition>
          <command>property-assign</command>
          <property>consumables/fuel/tank[1]/selected</property>
          <value>false</value>
        </binding>
        <binding>
          <condition>
            <not><property>controls/switches/starterkey-insert</property></not>
          </condition>
          <command>property-assign</command>
          <property>consumables/fuel/tank[2]/selected</property>
          <value>false</value>
        </binding>
        <binding>
          <condition>
            <not><property>controls/switches/starterkey-insert</property></not>
          </condition>
          <command>property-assign</command>
          <property>consumables/fuel/tank[3]/selected</property>
          <value>false</value>
        </binding>
        <!-- ******************************************* -->
        <binding>
          <command>nasal</command>
          <script>engines.autostart();</script>
        </binding>
      </item>
      <item>
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>
      <item>
			<label>Toggle Damage</label>
			<binding>
				<command>nasal</command>
				<script>
					if(getprop("/gear/gear/compression-ft") > 0.01){
						if(getprop("/payload/armament/msg")){screen.log.write("Damage OFF",1,0,0);setprop("/payload/armament/msg",0);}else{screen.log.write("Damage ON",1,0,0);setprop("/payload/armament/msg",1);}
					}else{
						screen.log.write("Damage can be toggled only when on the ground! Sorry! Its just the way it is.",1,0,0);
					}
				</script>
			</binding>
		</item>



      <item>
			<label>Reload weapons</label>
			<binding>
				<command>nasal</command>
				<script>
        screen.log.write("Press this menu to reload weapons to fire them again! (You will have to press this everytime you drop everything. despite if you change weapons!)");
        setprop("Controls/armament/station[0]/release",0);
        setprop("Controls/armament/station[1]/release",0);
        setprop("Controls/armament/station[2]/release",0);
        setprop("Controls/armament/station[3]/release",0);
        setprop("Controls/armament/station[4]/release",0);
        setprop("Controls/armament/station[5]/release",0);
        setprop("Controls/armament/station[6]/release",0);
        setprop("Controls/armament/station[7]/release",0);
        setprop("Controls/armament/station[8]/release",0);
        setprop("Controls/armament/station[9]/release",0);
        setprop("Controls/armament/station[10]/release",0);
        setprop("Controls/armament/station[11]/release",0);
        setprop("Controls/armament/station[12]/release",0);
        setprop("Controls/armament/station[13]/release",0);
        setprop("Controls/armament/station[14]/release",0);
        setprop("Controls/armament/station[15]/release",0);
        setprop("Controls/armament/station[16]/release",0);
        setprop("Controls/armament/station[17]/release",0);
        setprop("Controls/armament/station[18]/release",0);
        setprop("Controls/armament/station[19]/release",0);
        setprop("Controls/armament/station[20]/release",0);

				</script>
			</binding>
		</item>

      <item>
			<label>Remove weapons</label>
			<binding>
				<command>nasal</command>
				<script>
        screen.log.write("Weapons Removed Successfully | XB-70 Dearmed");
        setprop("Controls/armament/station[0]/release",1);
        setprop("Controls/armament/station[1]/release",1);
        setprop("Controls/armament/station[2]/release",1);
        setprop("Controls/armament/station[3]/release",1);
        setprop("Controls/armament/station[4]/release",1);
        setprop("Controls/armament/station[5]/release",1);
        setprop("Controls/armament/station[6]/release",1);
        setprop("Controls/armament/station[7]/release",1);
        setprop("Controls/armament/station[8]/release",1);
        setprop("Controls/armament/station[9]/release",1);
        setprop("Controls/armament/station[10]/release",1);
        setprop("Controls/armament/station[11]/release",1);
        setprop("Controls/armament/station[12]/release",1);
        setprop("Controls/armament/station[13]/release",1);
        setprop("Controls/armament/station[14]/release",1);
        setprop("Controls/armament/station[15]/release",1);
        setprop("Controls/armament/station[16]/release",1);
        setprop("Controls/armament/station[17]/release",1);
        setprop("Controls/armament/station[18]/release",1);
        setprop("Controls/armament/station[19]/release",1);
        setprop("Controls/armament/station[20]/release",1);
				</script>
			</binding>
		</item>

    </menu>
  </default>

</PropertyList>
