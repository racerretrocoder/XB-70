<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <keyboard>

    <key n="100">
      <name>d</name>
      <desc>door</desc>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </key>

    <key n="68">
      <name>D</name>
      <desc>bay</desc>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </key>
    <!--
    <key n="70">
      <name>F</name>
      <desc>wing tips down</desc>
      <binding>
        <command>nasal</command>
        <script>controls.wingSweep(1)</script>
      </binding>
      <mod-up>
        <binding>
          <command>nasal</command>
          <script>controls.wingSweep(0)</script>
        </binding>
      </mod-up>
    </key>

    <key n="102">
      <name>f</name>
      <desc>wing tips up</desc>
      <binding>
