<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Smoke2NOALS</name>
    <path>Classic/smoke2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Smoke2NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Smoke2ALS</name>
    <path>ALS/smoke2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Smoke2ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Smoke2HDR</name>
    <path>HDR/smoke2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Smoke2HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
