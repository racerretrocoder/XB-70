<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Flame4NOALS</name>
    <path>Classic/flame4.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame4NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Flame4ALS</name>
    <path>ALS/flame4.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame4ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Flame4HDR</name>
    <path>HDR/flame4.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame4HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
