<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Flame3NOALS</name>
    <path>Classic/flame3.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame3NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Flame3ALS</name>
    <path>ALS/flame3.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame3ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Flame3HDR</name>
    <path>HDR/flame3.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame3HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
