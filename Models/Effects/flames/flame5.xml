<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Flame5NOALS</name>
    <path>Classic/flame5.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame5NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Flame5ALS</name>
    <path>ALS/flame5.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame5ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Flame5HDR</name>
    <path>HDR/flame5.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame5HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
