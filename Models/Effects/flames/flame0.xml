<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Flame0NOALS</name>
    <path>Classic/flame0.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame0NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Flame0ALS</name>
    <path>ALS/flame0.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame0ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Flame0HDR</name>
    <path>HDR/flame0.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame0HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
