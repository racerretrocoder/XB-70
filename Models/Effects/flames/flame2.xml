<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Flame2NOALS</name>
    <path>Classic/flame2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame2NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Flame2ALS</name>
    <path>ALS/flame2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame2ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Flame2HDR</name>
    <path>HDR/flame2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame2HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
