<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Flame1NOALS</name>
    <path>Classic/flame1.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame1NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Flame1ALS</name>
    <path>ALS/flame1.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame1ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Flame1HDR</name>
    <path>HDR/flame1.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Flame1HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
