<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Trail0NOALS</name>
    <path>Classic/trail0.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail0NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Trail0ALS</name>
    <path>ALS/trail0.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail0ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Trail0HDR</name>
    <path>HDR/trail0.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail0HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
