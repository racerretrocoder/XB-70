<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Trail5NOALS</name>
    <path>Classic/trail5.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail5NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Trail5ALS</name>
    <path>ALS/trail5.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail5ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Trail5HDR</name>
    <path>HDR/trail5.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail5HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
