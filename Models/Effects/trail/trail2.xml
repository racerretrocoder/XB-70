<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Trail2NOALS</name>
    <path>Classic/trail2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail2NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Trail2ALS</name>
    <path>ALS/trail2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail2ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Trail2HDR</name>
    <path>HDR/trail2.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail2HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
