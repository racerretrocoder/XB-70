<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>Trail1NOALS</name>
    <path>Classic/trail1.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail1NOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>Trail1ALS</name>
    <path>ALS/trail1.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail1ALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>Trail1HDR</name>
    <path>HDR/trail1.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>Trail1HDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
