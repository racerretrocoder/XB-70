<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>taxilightNOALS</name>
    <path>Classic/taxi-light.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>taxilightNOALS</object-name>
    <condition>
      <or>
        <property>/sim/rendering/shaders/skydome</property>
        <not><property>/sim/rendering/shaders/skydome</property></not>
        <property>/sim/rendering/hdr/hdr-enabled</property>
      </or>
    </condition>
  </animation>

  <model>
    <name>taxilightALS</name>
    <path>ALS/taxi-light.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>taxilightALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>taxilightHDR</name>
    <path>HDR/taxi-light.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>taxilightHDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
