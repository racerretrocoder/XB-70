<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>turn_bank.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>back</object-name>
    <object-name>needle</object-name>
    <object-name>ref</object-name>
    <object-name>ball</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>back</object-name>
    <object-name>needle</object-name>
    <object-name>ref</object-name>
    <object-name>ball</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>back</object-name>
    <object-name>needle</object-name>
    <object-name>ref</object-name>
    <object-name>ball</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/instrumentation/turn-indicator/indicated-turn-rate</property>
    <!--<factor>20</factor>-->
    <interpolation>
      <entry><ind> -5.0 </ind><dep> -30 </dep></entry>
      <entry><ind> -1.5 </ind><dep> -30 </dep></entry>
      <entry><ind>  1.5 </ind><dep>  30 </dep></entry>
      <entry><ind>  5.0 </ind><dep>  30 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.0000 </x-m>
      <y-m>  0.0000 </y-m>
      <z-m> -0.0255 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ball</object-name>
    <property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <interpolation>
      <entry><ind> -10 </ind><dep> -5 </dep></entry>
      <entry><ind>  -4 </ind><dep> -5 </dep></entry>
      <entry><ind>   4 </ind><dep>  5 </dep></entry>
      <entry><ind>  10 </ind><dep>  5 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.3 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
